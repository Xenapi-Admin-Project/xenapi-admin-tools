#color echo
cecho ()                     
{
	MSG="${1}"  
	if [[ "$CSV" = "yes" ]] ;then 
	  	echo -ne "$MSG"
	else    
		if [ -z $2 ] ;then
			COLOR="off"
		else
			eval COLOR=\$$2
		fi     
		echo -ne "${COLOR}"
		echo -ne "$MSG"
		echo -ne "${off}"
	fi                      
}

printspaces()
{
	# arg 1 - the longest item in the column (integer)
	# arg 2 - the length of the item ie. ${#VAR} (integer)
	COLUMN="$1"
	ITEM="$2"
	
	if [[ "$CSV" = "yes" ]] ;then
		echo -ne ","
	else
		printf "%*s" "$(( $COLUMN + $MINSPACE - $ITEM ))"
	fi 
}

printtitlebar()
{
	# arg 1 - the title bar title
	# arg 2 - the length of the longest line
	
    TITLETEXT="$1"
	BARLENGTH="$2"
	TITLELEN="${#TITLETEXT}"
	
	if [[ $(( TITLELEN % 2)) -ne 0 ]]; then
		(( TITLELEN++ ))
	fi
	
	if [[ $(( BARLENGTH % 2)) -ne 0 ]]; then
		(( BARLENGTH++ ))
	fi
	
	eval COLOR=\$$3
	
	if [[ -z $COLOR ]] ;then
		COLOR="${black}"
	fi
	
	if [[ "$CSV" = "yes" ]] ;then
		return 0
	else
		
		BARPAD=$(( ($BARLENGTH / 2)  - ($TITLELEN / 2) ))
		printf "${COLOR}%*s" "$BARPAD"
		echo -ne "$1"
		printf "${COLOR}%*s" "$BARPAD"
		echo -ne "${off}" ; echo ""
	fi 
}

#get width of columns
getcolwidth()
{
	#get longest item in array
	array=( "$@" )
	i=0
	LONGEST="0"
	IFS=$'\n'
	for ITEM in ${array[@]} ;do
		if [[ "${#ITEM}" -gt "$LONGEST" ]] ;then
			LONGEST="${#ITEM}"
		fi
	done
	echo "$LONGEST"
	
}

