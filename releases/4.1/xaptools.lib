	for i in $(seq 0 $(( ${#network_uuid[@]} - 1 )) ) ;do
		NETUUIDS[$i]="${network_uuid[$i]}"
		NETNAMES[$i]="${network_name_label[$i]}"
		BRIDGENAMES[$i]="${network_bridge[$i]}"
		if [[ "${BRIDGENAMES[$i]}" == *xapi* ]] ;then
			for j in $(seq 0 $(( ${#pif_uuid[@]} - 1 )) ) ;do
